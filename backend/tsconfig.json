{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "src/",
    "outDir": "dist/",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "forceConsistentCasingInFileNames": true
}
